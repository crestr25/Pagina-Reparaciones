<% include partials/header %>

<div style="width: 50%; margin: 0 auto;">
    <h1>Reparaciones Pendientes</h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Orden</th>
            <th scope="col">Fecha</th>
            <th scope="col">Empresa</th>
            <th scope="col">Bomba</th>
        </tr>
        </thead>
        <tbody>
        <% reparaciones.forEach(function(element){ %>
            <tr>
                <th><a href="/reparaciones/<%= element.id %>"><%= element.number %></a></th>
                <td><%= element.fecha %></td>
                <td><%= element.empresa %></td>
                <td><%= element.marca + " " + element.referencia %></td>
            </tr>

        <% }) %>
        </tbody>
    </table>
</div>
<% include partials/footer %>